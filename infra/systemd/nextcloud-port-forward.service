[Unit]
Description=Port-forward Nextcloud from Minikube to host
After=network-online.target
Wants=network-online.target

[Service]
User=saitama
WorkingDirectory=/home/saitama
Environment=KUBECONFIG=/home/saitama/.kube/config
ExecStart=/usr/bin/env kubectl --context=minikube -n homelab-apps port-forward svc/nextcloud 8080:8080 --address 0.0.0.0
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
